# GCP Infrastructure Configuration
# Copy this file to .env and update with your values
# Usage: cp .env.example .env

# REQUIRED: GCP Project ID
TF_VAR_project_id=your-gcp-project-id

# Environment (nonprod or prod)
TF_VAR_environment=nonprod

# GCP Region
TF_VAR_region=northamerica-northeast2

# Cloud Provider (gcp, aws, azure)
TF_VAR_cloud_provider=gcp

# Optional: Feature Flags (set to false to disable for faster testing)
# TF_VAR_enable_logging_bucket=false
# TF_VAR_enable_dr_loadbalancer=true
# TF_VAR_enable_demo_backend=true
# TF_VAR_enable_firewall=true
# TF_VAR_enable_waf=true

# Google Cloud SDK Configuration
# Used by gcloud commands and Go tests
GOOGLE_PROJECT=${TF_VAR_project_id}
